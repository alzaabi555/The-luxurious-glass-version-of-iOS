{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - تعطيل التدقيق الصارم للمتغيرات غير المستخدمة */
    "strict": true,
    "noUnusedLocals": false,      // غيّر هذا إلى false
    "noUnusedParameters": false,  // غيّر هذا إلى false
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./*.ts", 
    "./*.tsx", 
    "./components/**/*.tsx", 
    "./context/**/*.tsx", 
    "./hooks/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "vite.config.ts"
  ]
}
